{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "allowJs": true,                                  
    "checkJs": true,                                  
    "declaration": true,                              
    "declarationMap": true,                           
    "emitDeclarationOnly": true,                      
    "outDir": "./types",                                   
    "removeComments": false,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                            
    "strictNullChecks": true,                         
    "skipLibCheck": true                                 
  }
}
